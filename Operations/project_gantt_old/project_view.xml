	            		<field name='project' attrs="{'readonly':[('state','=','execute')]}"/>
	            		<field name='finance_document' attrs="{'readonly':[('state','=','execute')]}"/>
	            		<field name='solution' attrs="{'readonly':[('state','=','execute')]}"/> -->
	            		
