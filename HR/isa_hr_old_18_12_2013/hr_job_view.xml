<?xml version ='1.0'?>
<openerp>
    <data>
        
        <record id="drishti_hr_job_form1" model="ir.ui.view">
            <field name="name">drishti.hr.job.form</field>
            <field name="model">hr.job</field>
            <field name="type">form</field>
            <field name="inherit_id" ref='hr.view_hr_job_form'/>
